		"Location": "ClientApp/question-definitions"
	},

	"EmailTemplates": {
		"RegistrationEmail": "Resources/EmailTemplates/RegistrationEmail.template"
	},

	"Logging": {
		"PathFormat": "Logs/log-{Date}.log",
		"IncludeScopes": false,
		"LogLevel": {
			"Default": "Information",
			"AspNet": "Warning",
			"Microsoft.AspNetCore.Authorization.DefaultAuthorizationService": "Warning",
			"Microsoft.AspNetCore.Hosting.Internal.WebHost": "Warning",
			"Microsoft.EntityFrameworkCore": "Warning",
			"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
			"Microsoft.AspNetCore.Cors.Infrastructure.CorsService": "Warning",
			"System": "Error",
			"Microsoft": "Error"
		},
		"Debug": {
			"LogLevel": {
				"Default": "Error",
				"System": "Error",
				"Microsoft.AspNetCore.Authorization.DefaultAuthorizationService": "Warning",
				"Microsoft.AspNetCore.Hosting.Internal.WebHost": "Warning",
				"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
				"Microsoft.AspNetCore.Cors.Infrastructure.CorsService": "Warning",
				"Microsoft": "Error"
			}
		},
		"Console": {
			"LogLevel": {
				"Default": "Information",
				"AspNet": "Warning",
				"Microsoft.AspNetCore.Authorization.DefaultAuthorizationService": "Warning",
				"Microsoft.AspNetCore.Hosting.Internal.WebHost": "Warning",
				"Microsoft.EntityFrameworkCore": "Warning",
				"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
				"Microsoft.AspNetCore.Cors.Infrastructure.CorsService": "Warning",
				"System": "Error",
				"Microsoft": "Error"
			}
		}
	}
}
