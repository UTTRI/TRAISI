{
	"compilerOptions": {
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"module": "ES6",
		"outDir": "../out-tsc/spec",
		"target": "esnext",
		"noEmit": false,
		// "rootDirs": ["."],
		"lib": ["es2016", "dom"],
		"types": ["webpack-env", "node", "jasmine"],
		"baseUrl": ".",
