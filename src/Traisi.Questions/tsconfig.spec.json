		"paths": {
			//	// "*": ["../*", "generated/*"]
		}
	},
	
	"angularCompilerOptions": {
		// "enableResourceInlining": true
	},
	"include": ["tests/**/*/*.spec.ts", "**/*.d.ts", "**/*/"],
	"exclude": ["dist/**/*", "node_modules/**/*"]
